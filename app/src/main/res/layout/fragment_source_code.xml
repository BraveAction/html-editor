<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.map.longdo.com.htmleditor.fragment.SourceCodeFragment"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/et_url"
            android:hint="@string/default_url"
            android:minHeight="50dp"
            android:maxLines="5"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:layout_weight="1" />

        <com.andexert.library.RippleView
            android:id="@+id/rv_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            rv_centered="true"
            rv_rippleDuration="50">

            <Button
                android:id="@+id/bt_request"
                android:text="@string/Request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/accent"
                android:textColor="@android:color/white"
                android:padding="12dp" />

        </com.andexert.library.RippleView>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_source_code"
            android:gravity="start|top"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:padding="8dp" />
    </ScrollView>

</LinearLayout>
